        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rb_paperRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/paper_list" />

    </LinearLayout>

</LinearLayout>